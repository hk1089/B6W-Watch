<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartWatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartWatch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi" tools:targetApi="m">
            false
        </item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent
        </item>
    </style>

    <style name="Theme.SmartWatch.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorAppPink</item>
        <item name="android:navigationIcon">@color/colorAppPink</item>
        <item name="android:navigationBarColor">@color/colorAppPink</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi" tools:targetApi="m">
            false
        </item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="regularTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="mediumTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="semiBoldTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="boldTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="toolbarTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="inputText1" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/warm_gray</item>
        <item name="colorControlNormal">@color/warm_gray</item>
        <item name="colorControlActivated">@color/secondary_text</item>
        <item name="colorControlHighlight">@color/secondary_text</item>
        <item name="android:textColor">@color/warm_gray</item>
        <item name="colorAccent">@color/secondary_text</item>
        <item name="colorPrimary">@color/secondary_text</item>

    </style>

    <style name="error_appearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/red_text</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="materialEditTextSemiBold" parent="ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="materialEditTextMedium" parent="ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/edittext_text_color</item>

    </style>

    <style name="CountryPickerTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="myButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="radioButtonDark" parent="@android:style/Widget.CompoundButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TabTitle" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="TabTitle1" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TabTitle2" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="Theme.RiderApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.RiderApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationIcon">@color/colorPrimary</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>